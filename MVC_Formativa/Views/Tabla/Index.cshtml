@model List<MVC_Formativa.Models.ViewModels.ListTablaViewModel>
@{
    ViewBag.Title = "Datos Tabla";
}

<h2>@ViewBag.Title</h2>

<div class="row" style="text-align:right;padding:5px;">
    <a href="~/Tabla/Nuevo" class="btn btn-primary">Nuevo</a>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nombre</th>
                <th scope="col">Correo</th>
                <th scope="col">Fecha Nacimiento</th>
            </tr>
            @foreach (var oElemento in Model)
            {
        <tr>
            <td scope="row">@oElemento.Id</td>
            <td scope="row">@oElemento.Nombre</td>
            <td scope="row">@oElemento.Correo</td>
            <td scope="row">@oElemento.Fecha_Nacimiento</td>
            <td>
                <a class="btn btn-default" href="~/Tabla/Editar/@oElemento.Id">Editar</a>
                <a class="btn btn-danger" href="~/Tabla/Eliminar/@oElemento.Id">Eliminar</a>
            </td>
        </tr>
            }
        </table>
    </div>
</div>

